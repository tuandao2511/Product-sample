<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextDisplayProductNameTheme">
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
    </style>

    <style name="TextDisplayProductPriceTheme">
        <item name="android:textColor">@color/color_tomoto</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
    </style>

</resources>
